### Fortune At Login ### {{{
## Tests for fortune, root, interactive shell, and dumb term
if [ $(command -v fortune) ] && [ $UID != '0' ] && [[ $- == *i* ]] && [ $TERM != 'dumb' ]; then
	### Cowsay At Login ###
	if [ $(command -v cowsay) ]; then
		fortune -a | cowsay
	else
		MISSING_ITEMS+="cowsay, "
		fortune -a
	fi
  else
	MISSING_ITEMS+="fortune, "
fi
### End Fortune ### }}}
